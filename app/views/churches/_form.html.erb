<div class="content-page">
        <!-- Start content -->
        <div class="content">
          <div class="container">

            <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <h4 class="page-title">Add LifePointer</h4>
                            </div>
                        </div>
                        <%= form_for(church) do |f| %>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">

                                    <form action="#" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label for="userName">First Name</label>
                                            <%= f.text_field :fname, required: true, placeholder: 'First Name', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="emailAddress">Last Name</label>
                                            <%= f.text_field :lname, required: true, placeholder: 'Last Name', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="pass1">Email</label>
                                            <%= f.email_field :email, required: true, placeholder: 'Email', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="passWord2">Phone Number</label>
                                            <%= f.telephone_field :phone, required: true, placeholder: 'Phone Number', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="passWord2">RSVP</label>
                                            <%= f.text_field :rsvp, required: true, placeholder: 'RSVP', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="passWord2">Invited Someone?</label>
                                            <%= f.text_field :friend, required: true, placeholder: 'Did you invited someone', :class => 'form-control' %>
                                        </div>
                                        <div class="form-group">
                                            <label for="passWord2">Memeber Of Lifepointe</label>
                                            <%= f.text_field :member, required: true, placeholder: 'Are you a member of lifepointe', :class => 'form-control' %>
                                        </div>

                                        <div class="form-group text-right m-b-0">
                                            <%= f.submit({:class => 'btn btn-primary'}) %>
                                            <%= link_to 'Go Back', churches_path %>
                                        </div>

                                    </form>
                                </div>
                            </div><!-- end col -->

                            
                        </div>
                        <% end %>
                        <!-- end row -->
                    </div> <!-- container -->

                </div> <!-- content -->