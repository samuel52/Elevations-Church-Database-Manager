<% if user_signed_in? %>
<!-- ========== Left Sidebar Start ========== -->

            <div class="left side-menu">
                <div class="sidebar-inner slimscrollleft">
                    <!--- Divider -->
                    <div id="sidebar-menu">
                        <ul>


                            <li class="has_sub">
                                <%= link_to(root_path(@root), :class => 'waves-effect') do %>
                                  <i class="fa fa-windows"> </i>Dashboard
                               <% end %>
                            </li>
                            <li class="has_sub">
                               <%= link_to(root_path(@root), :class => 'waves-effect') do %>
                                  <i class="fa fa-search"> </i>Search Lifepointer
                               <% end %>
                            </li>
                            <li class="has_sub">
                               <%= link_to(new_church_path(@new_church), :class => 'waves-effect') do %>
                                  <i class="fa fa-folder-open"> </i>Import Lifepointer
                               <% end %>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>

                </div>
            </div>
      <!-- Left Sidebar End -->
      <div class="content-page">
          <div class="content">
              <div class="container">
                  <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <form accept-charset="UTF-8" role="search" action="/churches" method="get" class="navbar-left app-search pull-left hidden-xs">
                                        <input name="utf8" type="hidden" value="&#x2713;" />
                                        <input type="text" name="search" id="search" placeholder="Search lifepointers here..." class="form-control" style="width: 1000px; background-color: #57C5A5 !important;">
                                        <a href=""><i class="fa fa-search"></i></a>
                                    </form>

                                    <table id="datatable" class="table table-striped dt-responsive nowrap">
                                        <thead>
                                            <tr>
                                                <th>N/O</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>RSVP</th>
                                                <th>Inviting Friend</th>
                                                <th>Existing Member</th>
                                                <th colspan="3"></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                        <% @churches.each do |church| %>
                                          <tr>
                                            <td><%= church.id %></td>
                                            <td><%= church.fname %></td>
                                            <td><%= church.lname %></td>
                                            <td><%= church.email %></td>
                                            <td><%= church.phone %></td>
                                            <td><%= church.rsvp %></td>
                                            <td><%= church.friend %></td>
                                            <td><%= church.member %></td>
                                            <td><%= link_to 'Show', church, :class => 'label label-success' %></td>
                                            <td><%= link_to 'Edit', edit_church_path(church), :class => 'label label-primary' %></td>
                                            <td><%= link_to 'Destroy', church, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'label label-danger' %></td>
                                          </tr>
                                        <% end %>
                                      </tbody>
                                    </table>
                                    <div class="text-right">
                                        <%= will_paginate @churches, renderer: BootstrapPagination::Rails %>
                                    </div>
                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->
              </div>
          </div>
      </div>
<% else %>
<div class="content-page">
          <div class="content">
              <div class="container">
                  <div class="row">

                  </div>
              </div>
          </div>
</div>
<% end %>