<div class="text-center logo-alt-box">
            <a href="index.html" class="logo"><span>Life<span>Pointe</span></span></a>
            <h5 class="text-muted m-t-0">Members Database</h5>
        </div>

        <div class="wrapper-page">

        	<div class="m-t-30 card-box">
                <div class="text-center">
                    <h4 class="text-uppercase font-bold m-b-0">Login</h4>
                </div>
                <div class="panel-body">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs">
					    <%= f.input :email, required: false, autofocus: true %>
					    <%= f.input :password, required: false %>
					    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					  </div>

					  <div class="form-actions">
					    <%= f.button :submit, "Log in", ({:class => 'btn btn-custom btn-bordred'})%>
					  </div>
					<% end %>
			</div>
			<div class="row">
				<div class="col-sm-12 text-center">
					<p class="text-muted">Signed up<%= render "devise/shared/links" %></p>
				</div>
		</div>
</div>