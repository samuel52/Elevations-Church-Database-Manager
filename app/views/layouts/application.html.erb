        <link href="https://strictcity.live/elevation/assets/plugins/datatables/scroller.bootstrap.min.css" rel="stylesheet" type="text/css" />

		<link href="https://strictcity.live/elevation/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="https://strictcity.live/elevation/assets/css/menu.css" rel="stylesheet" type="text/css" />
        <link href="https://strictcity.live/elevation/assets/css/core.css" rel="stylesheet" type="text/css" />
        <link href="https://strictcity.live/elevation/assets/css/components.css" rel="stylesheet" type="text/css" />
