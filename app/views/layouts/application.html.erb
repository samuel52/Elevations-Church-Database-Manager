        <script src="https://strictcity.live/elevation/assets/js/modernizr.min.js"></script>
        <!-- Jquery filer css -->
        <link href="https://strictcity.live/elevation/assets/plugins/jquery.filer/css/jquery.filer.css" rel="stylesheet" />
        <link href="https://strictcity.live/elevation/assets/plugins/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css" rel="stylesheet" />
  </head>

<body class="fixed-left">
  <div id="wrapper">
<% if user_signed_in? %>
  	<div class="topbar">

    <!-- LOGO -->
    <div class="topbar-left">
        <div>
          <%= link_to image_tag('life2.png', :style => 'width: 52px; margin-left: 30px;'), root_path %>
        </div>
    </div>

    <!-- Button mobile view to collapse sidebar menu -->
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="">
                <div class="pull-left">
                    <button class="button-menu-mobile open-left waves-effect waves-light">
                                    <i class="fa fa-bars"></i>
                                </button>
                    <span class="clearfix"></span>
                </div>
                <ul class="nav navbar-nav navbar-right pull-right">
                    <li>
                        <!-- Notification -->
                        <div class="notification-box">
                            <ul class="list-inline m-b-0">
                                <li>
                                    <a href="javascript:void(0);" class="right-bar-toggle">
                                                    <i class="fa fa-bell"></i>
                                                </a>
                                    <div class="noti-dot">
                                        <span class="dot"></span>
                                        <span class="pulse"></span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <!-- End Notification bar -->
                    </li>
                    <li class="dropdown user-box">
                        <a href="#" class="dropdown-toggle waves-effect waves-light profile " data-toggle="dropdown" aria-expanded="true">
                                        <img src="https://strictcity.live/elevation/assets/images/users/avatar-1.jpg" alt="user-img" class="img-circle user-img">
                                        <div class="user-status away"><i class="fa fa-down"></i></div>
                                    </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                            <li><%= link_to 'Import Pointer', new_church_path %></li>
                            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
                        </ul>
                    </li>
                </ul>

            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<% else %>
   <div class="topbar">

    <!-- LOGO -->
    <div class="topbar-left">
        <div class="text-center">
            <a href="/" class="logo">
                <i class="fa fa-angellist"></i> <span>Life<span>Pointe</span></span>
	<!--<span><img src="assets/images/logo.png" alt="logo" style="height: 20px;"></span>-->
            </a>
        </div>
    </div>

    <!-- Button mobile view to collapse sidebar menu -->
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="">
                <ul class="nav navbar-nav navbar-right pull-right">
                    <li>
                        <!-- Notification -->
                        <div class="notification-box">
                            <ul class="list-inline m-b-0">
                                <li><%= link_to 'Signup', new_user_registration_path %></li>
            					<li><%= link_to 'Login', new_user_session_path %></li>
                            </ul>
                        </div>
                        <!-- End Notification bar -->
                    </li>
                </ul>

            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<% end %>
  
   	 <%= yield %>

</div>
